<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.weatherapp.WeatherController">
    <content>
        <VBox>
            <GridPane minHeight="50.0" BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <children>
                    <Label fx:id="locationText" text="Location"/>
                    <HBox alignment="CENTER" prefHeight="100.0" GridPane.columnIndex="1">
                        <children>
                            <TextField fx:id="searchBar"/>
                            <Button fx:id="searchButton" alignment="CENTER_RIGHT" mnemonicParsing="false"
                                    onMouseClicked="#onCitySearch" text="Search" textAlignment="CENTER"/>
                        </children>
                    </HBox>
                </children>
            </GridPane>
            <VBox BorderPane.alignment="CENTER">
                <children>
                    <GridPane alignment="CENTER" minHeight="250.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <VBox>
                                <children>
                                    <HBox prefHeight="100.0">
                                        <children>
                                            <ImageView fx:id="weatherImg" fitHeight="150.0" fitWidth="200.0"
                                                       pickOnBounds="true" preserveRatio="true"/>
                                            <Label fx:id="tempText" text="Temp."/>
                                        </children>
                                    </HBox>
                                    <Label fx:id="lastUpdatedText" text="Hour"/>
                                </children>
                            </VBox>
                            <VBox GridPane.columnIndex="1">
                                <children>
                                    <Label fx:id="humidityText" text="Humidity "/>
                                    <Label fx:id="windText" text="Wind "/>
                                    <Label fx:id="visibilityText" text="Visibility "/>
                                    <Label fx:id="pressureText" text="Pressure "/>
                                    <Label fx:id="dewpointText" text="Dew point "/>
                                </children>
                            </VBox>
                        </children>
                    </GridPane>
                    <HBox fx:id="dailyForecastContainer" minHeight="150.0">
                    </HBox>
                    <LineChart minHeight="100.0">
                        <xAxis>
                            <CategoryAxis side="BOTTOM"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis side="LEFT"/>
                        </yAxis>
                    </LineChart>
                </children>
            </VBox>


        </VBox>
    </content>
</ScrollPane>
